{
  "name": "edge-core",
  "version": "0.4.11",
  "description": "Core JavaScript Infrastructure for Edge. Part of the Edge Platform.",
  "main": "lib/node.es5.cjs.js",
  "module": "lib/node.es5.esm.js",
  "browser": "lib/browser.es5.esm.js",
  "main:es2015": "lib/node.es2015.cjs.js",
  "module:es2015": "lib/node.es2015.esm.js",
  "browser:es2015": "lib/browser.es2015.esm.js",
  "scripts": {
    "size": "prepublish && size-limit",
    "test": "jest && npm run size",
    "prepare": "rimraf lib && prepublish",
    "release": "release-it --github.release --npm.publish --non-interactive",
    "release:minor": "release-it --github.release --npm.publish --non-interactive --increment minor",
    "release:major": "release-it --github.release --npm.publish --non-interactive --increment major"
  },
  "engines": {
    "node": ">=6.0.0",
    "yarn": ">=0.21.3",
    "npm": ">=4.0.0"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": "eslint",
    "*.mjs": "eslint",
    "*.css": "stylelint",
    "*.pcss": "stylelint",
    "*.sss": "stylelint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/edge-core.git"
  },
  "keywords": [
    "react",
    "apollo",
    "graphql",
    "intl",
    "localization",
    "framework"
  ],
  "author": {
    "name": "Sebastian Software",
    "email": "s.werner@sebastian-software.de",
    "url": "sebastian-software.de"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/sebastian-software/edge-core/issues"
  },
  "size-limit": [
    {
      "path": "lib/browser.es5.esm.js",
      "limit": "120 KB"
    },
    {
      "path": "lib/node.es5.esm.js",
      "limit": "100 KB"
    }
  ],
  "homepage": "https://github.com/sebastian-software/edge-core#readme",
  "dependencies": {
    "history": "^4.6.3",
    "identity-obj-proxy": "^3.0.0",
    "intl-locales-supported": "^1.0.0",
    "lean-intl": "^2.3.0",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-apollo": "^1.4.10",
    "react-dom": "^15.6.1",
    "react-helmet": "^5.1.3",
    "react-intl": "^2.3.0",
    "react-redux": "^5.0.5",
    "react-test-renderer": "^15.6.1",
    "react-tree-walker": "^2.1.2",
    "react-universal-component": "^2.3.2",
    "redux": "^3.7.2",
    "redux-first-router": "^1.9.10",
    "redux-first-router-link": "^1.1.3",
    "redux-immutable-state-invariant": "^2.0.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "serialize-javascript": "^1.4.0"
  },
  "devDependencies": {
    "prepublish": "^1.2.5",
    "cross-env": "^5.0.3",
    "jest-cli": "^20.0.4",
    "readable-code": "^3.4.8",
    "rimraf": "^2.6.1",
    "size-limit": "^0.8.0"
  }
}
