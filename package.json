    "release:major": "release-it --github.release --npm.publish --non-interactive --increment major"
  },
  "engines": {
    "node": ">=6.0.0",
    "yarn": ">=0.21.3",
    "npm": ">=4.0.0"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": "eslint",
    "*.mjs": "eslint",
    "*.css": "stylelint",
    "*.pcss": "stylelint",
    "*.sss": "stylelint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/edge-core.git"
  },
  "keywords": [
    "react",
    "apollo",
    "graphql",
    "intl",
    "localization",
    "framework"
  ],
  "author": {
    "name": "Sebastian Software",
    "email": "s.werner@sebastian-software.de",
    "url": "sebastian-software.de"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/sebastian-software/edge-core/issues"
  },
  "homepage": "https://github.com/sebastian-software/edge-core#readme",
  "dependencies": {
    "body-parser": "^1.17.2",
    "cookie-parser": "^1.4.3",
    "express": "^4.15.3",
    "express-locale": "^1.0.2",
    "helmet": "^3.6.1",
    "hpp": "^0.2.2",
    "intl-locales-supported": "^1.0.0",
    "isomorphic-fetch": "^2.2.1",
    "pretty-error": "^2.1.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-apollo": "^1.4.3",
    "react-dom": "^15.6.1",
    "react-intl": "^2.3.0",
    "react-universal-component": "^1.4.1",
    "redux": "^3.7.2",
    "redux-immutable-state-invariant": "^2.0.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "serialize-javascript": "^1.3.0",
    "serve-favicon": "^2.4.3",
    "shrink-ray": "^0.1.3",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "prepublish": "^1.0.6",
    "cross-env": "^5.0.1",
    "jest-cli": "^20.0.4",
    "readable-code": "^3.3.5",
    "rimraf": "^2.6.1"
